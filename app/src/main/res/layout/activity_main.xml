<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen40"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_marginTop="@dimen/dimen50"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="@dimen/dimen8"
        android:text="@string/music_box"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size50" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen250"
        android:layout_marginBottom="@dimen/dimen100"
        android:background="@drawable/music_notes1" />

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:padding="@dimen/dimen8"
        android:paddingLeft="@dimen/dimen16"
        android:text="@string/playlists"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size32" />

</LinearLayout>
